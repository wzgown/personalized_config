{
    "languageserver": {
        "golang": {
            "command": "bingo",
            "args": ["--diagnostics-style=instant"],
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        }, 

        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },

    "initializationOptions": {
        "cache": {
            "directory": "/tmp/ccls"
        }
    }
}

